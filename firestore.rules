rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    // 商品データ：誰でも読取可
    match /products/{id} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email in ['admin@example.com'];
    }

    // 予約データ：誰でも作成可、管理者のみ読取・更新
    match /reservations/{id} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email in ['admin@example.com'];
    }

    // 休業日：誰でも読取可、管理者のみ書込可
    match /holidays/{id} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email in ['admin@example.com'];
    }
  }
}